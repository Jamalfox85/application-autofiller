{
  "manifest_version": 3,
  "name": "Fillr - Job Application Autofill",
  "version": "1.0.2",
  "description": "Autofill job applications instantly. Save your info once, apply to hundreds of jobs in seconds.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "old_matches": [
        "*://*.indeed.com/*",
        "*://*.linkedin.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.myworkdaysite.com/*",
        "*://*.icims.com/*",
        "*://*.resumator.com/*",
        "*://*.ultipro.com/*",
        "*://*.paylocity.com/*",
        "*://*.SuccessFactors.com/*",
        "*://*.taleo.net/*",
        "*://*.smartrecruiters.com/*",
        "*://*.breezy.hr/*",
        "*://*.bamboohr.com/*",
        "*://*.jobs.com/*",
        "*://*.ashbyhq.com/*",
        "*://*.jobvite.com/*",
        "*://*.applytojob.com/*",
        "*://*.recruitee.com/*",
        "*://*.workable.com/*",
        "*://*.joinstellar.ai/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "assets/images/*"],
      "matches": ["<all_urls>"],
      "old_matches": [
        "*://*.indeed.com/*",
        "*://*.linkedin.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.icims.com/*",
        "*://*.resumator.com/*",
        "*://*.ultipro.com/*",
        "*://*.paylocity.com/*",
        "*://*.SuccessFactors.com/*",
        "*://*.taleo.net/*",
        "*://*.smartrecruiters.com/*",
        "*://*.breezy.hr/*",
        "*://*.bamboohr.com/*",
        "*://*.jobs.com/*",
        "*://*.ashbyhq.com/*",
        "*://*.jobvite.com/*",
        "*://*.applytojob.com/*",
        "*://*.recruitee.com/*",
        "*://*.workable.com/*"
      ]
    }
  ]
}
