{
  "manifest_version": 3,
  "name": "Job Application Autofill",
  "version": "1.0.0",
  "description": "Autofill job applications instantly. Save your info once, apply to hundreds of jobs in seconds.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.indeed.com/*",
        "*://*.linkedin.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.icims.com/*",
        "*://*.resumator.com/*",
        "*://*.ultipro.com/*",
        "*://*.paylocity.com/*",
        "*://*.SuccessFactors.com/*",
        "*://*.taleo.net/*",
        "*://*.smartrecruiters.com/*",
        "*://*.breezy.hr/*",
        "*://*.bamboohr.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": [
        "*://*.indeed.com/*",
        "*://*.linkedin.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.icims.com/*",
        "*://*.resumator.com/*",
        "*://*.ultipro.com/*",
        "*://*.paylocity.com/*",
        "*://*.SuccessFactors.com/*",
        "*://*.taleo.net/*",
        "*://*.smartrecruiters.com/*",
        "*://*.breezy.hr/*",
        "*://*.bamboohr.com/*"
      ]
    }
  ]
}
